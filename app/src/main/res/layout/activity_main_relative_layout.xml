<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/imgTonyStark"
        android:layout_width="200dp"
        android:layout_height="200dp"
         android:layout_margin="10dp"
        android:padding="20dp"
        android:src="@drawable/tony_stark" />

    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tony Stark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_below="@+id/txtLayoutHeader"
        android:id="@+id/txtLayoutSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="tony@starkindustries.com"
        android:textColor="#9370DB"
        android:textStyle="italic" />


    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnClickHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#0091ea"
        android:text="Click here"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@+id/txtLayoutSubHeader"
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter your name here"
        android:inputType="textPassword" />

</RelativeLayout>